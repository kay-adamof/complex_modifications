{
  "title": "017 integrate karabiner key mapping",
  "rules": [
    {
      "description": "017 spacebar mode",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "spacebar mode",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "spacebar mode",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar"
            }
          ]
        }
      ]
    },
    {
      "description": "017_eisuu : set eisuu mode",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "japanese_eisuu",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "eisuu mode",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "eisuu mode",
                "value": 0
              }
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "017_a-l_to_1-9.json",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "spacebar mode",
              "value": 0
            },
            {
              "type": "variable_if",
              "name": "eisuu mode",
              "value": 1
            }
          ],
          "from": {
            "key_code": "a"
          },
          "to": [
            {
              "key_code": "1"
            }
          ]
        }
      ]
    },
    {
      "description": "017_01_a-l_to_1-9_shifted",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "spacebar mode",
              "value": 1
            },
            {
              "type": "variable_if",
              "name": "eisuu mode",
              "value": 0
            }
          ],
          "from": {
            "key_code": "a"
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_shift", "left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "017_cursor_moving",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "variable_if",
              "name": "eisuu mode",
              "value": 1
            },
            {
              "type": "variable_if",
              "name": "spacebar mode",
              "value": 1
            }
          ],
          "from": {
            "key_code": "a"
          },
          "to": [
            {
              "key_code": "1",
              "modifiers": ["right_shift"]
            }
          ]
        }
      ]
    }
  ]
}
